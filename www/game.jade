doctype html
html(lang="en-us")
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title IncrementalRPG
        link(rel="stylesheet" type="text/css" href="lib/bootstrap.css")
        link(rel="stylesheet" type="text/css" href="lib/bootstrap-theme.css")
        link(rel="stylesheet" type="text/css" href="app/style.css")
        script(data-main="app" src="lib/require.js")
    body
        #hud.panel
            .panel-body
                #inventoryModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="inventoryModal" aria-hidden="true")
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type="button" data-dismiss="modal" aria-hidden="true")|&times;
                                h4#inventoryLabel.modal-title|Inventory!
                            .modal-body
                            .modal-footer
                                button#inventoryClose.btn.btn-success(type="button" data-dismiss="modal")|Done
                #equipmentModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="​equipmentModal" aria-hidden="true")
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type="button" data-dismiss="modal" aria-hidden="true")|&times;
                                h4#equipmentLabel.modal-title|Equipment!
                            .modal-body
                            .modal-footer
                                button#equipmentClose.btn.btn-success(type="button" data-dismiss="modal")|Done
                #characterModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="​​characterModal" aria-hidden="true")
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type="button" data-dismiss="modal" aria-hidden="true")|&times;
                                h4#characterLabel.modal-title|Character!
                            .modal-body
                            .modal-footer
                                button#characterClose.btn.btn-success(type="button" data-dismiss="modal")|Done
                .row
                    .col-xs-6.col-xs-push-3.header
                        | You are
                        span#kingName
                        br
                        | King of
                        span#realmName
                .row
                    .col-xs-4.col-xs-push-1
                        ul.hudList
                            li
                                .progress.progress-striped
                                    #healthBar.progress-bar.progress-bar-success.hudBar(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100") Health:
                                        span#playerHealth.barvalue|  100
                            li
                                .progress.progress-striped
                                    #staminaBar.progress-bar.hudBar.progress-bar-warning(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100") Stamina:
                                        span#playerStamina.barvalue|  100
                            li
                                .progress.progress-striped
                                    #manaBar.progress-bar.progress-bar-info.hudBar(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100") Mana:
                                        span#playerMana.barvalue|  100
                            li
                                .progress.progress-striped
                                    #expBar.progress-bar.progress-bar-danger.hudBar(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100") Exp:
                                        span#playerExp.barvalue|  0
                    .col-xs-1.col-xs-push-1
                        ul.hudList
                            li Str:
                                span#charStr|  8
                            li Dex:
                                span#charDex|  6
                            li Agi:
                                span#charAgi|  6
                    .col-xs-1.col-xs-push-2
                        ul.hudList
                            li Wis:
                                span#charWis|  4
                            li Int:
                                span#charInt|  6
                            li Luck:
                                span#charLuck|  2
                    .col-xs-4.col-xs-push-2
                        ul.hudList.hudNav
                            li
                                button#inventory.btn.hud-btn.btn-primary(data-toggle="modal" data-target="#inventoryModal") Inventory
                            li
                                button#equipment.btn.hud-btn.btn-primary(data-toggle="modal" data-target="#equipmentModal") Equipment
                            li
                                button#character.btn.hud-btn.btn-primary(data-toggle="modal" data-target="#characterModal") Character
    #onLoadModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true', onmousedown='return false') ×
                    h4#myModalLabel.modal-title.text-center Welcome to Click Kingdom!
                .modal-body
                    h3 You are...
                    input#king.form-control(type='text' placeholder="How will you be called?")
                    h3  of...
                    input#realm.form-control(type='text' placeholder="What is the name of the land you rule?")
                .modal-footer
                    p.text-center To start building your realm gather resources and train units!!
                        button#modalClose.btn.btn-success(ype='button', data-dismiss='modal', onmousedown='return false') Done
    #statModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='statModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true', onmousedown='return false') ×
                    h4#statModalLabel.modal-title.text-center Your buildings and resources
                .modal-body
                    .btn-toolbar.justify(role="toolbar")
                        .btn-group.btn-group-justified
                            .btn-group
                                .btn.btn-iron.disabled
                                    | Iron:&ensp;
                                    span#statModalstatModalironAmount  0
                                .btn.btn-copper.disabled
                                    | Copper:&ensp;
                                    span#statModalstatModalcopperAmount  0
                                .btn.btn-silver.disabled
                                    | Silver:&ensp;
                                    span#statModalsilverAmount  0
                                .btn.btn-gold.disabled
                                    | Gold:&ensp;
                                    span#statModalgoldAmount  0
                        .btn-group.btn-group-justified
                            .btn-group
                                .btn.disabled.btn-info
                                    | Population:&ensp;
                                    span#statModalworkerAmount  0
                                    | &ensp;/&ensp;
                                    span#statModalmaxPop 0
                                .btn.disabled.btn-info
                                    span#statModaltentAmount  0
                                    | Tents
                                .btn.disabled.btn-info
                                    span#statModalhouseAmount  0
                                    | Houses
                                .btn.disabled.btn-info
                                    span#statModalmillAmount  0
                                    | Mills
                                .btn.disabled.btn-info
                                    span#statModalquarryAmount  0
                                    | Quarrys
                                .btn.disabled.btn-info
                                    span#statModalsiloAmount  0
                                    | Silos
                                .btn.disabled.btn-info
                                    span#statModalmineAmount 0
                                    | Mines
                .modal-footer
                    button.btn.btn-success(type='button', data-dismiss='modal', onmousedown='return false',) Done
    .container
        .row.visible-xs.hidden-md
            .col-xs-2.col-xs-offset-4
                button#showStats.btn.btn-success(type='button', onmousedown='return false') Show Stats
        .row
            .col-xs-12.col-md-4.col-ms-offset-2
                h4.text-center Gather Resources
                .btn-toolbar(role='toolbar')
                    .btn-group.btn-group-justified
                        .btn-group
                            button#chopWood.btn.btn-primary(type='button', onmousedown='return false') Chop Wood
                        .btn-group
                            .btn.btn-default.disabled
                                span#woodAmount 0
                                | /
                                span#maxWood  100
                        .btn-group
                            .btn.btn-default.disabled
                                span#woodIncrement 0
                                | / 5s
                    .btn-group.btn-group-justified
                        .btn-group
                            button#mineStone.btn.btn-primary(type='button', onmousedown='return false') Mine Stone
                        .btn-group
                            .btn.btn-default.disabled
                                span#stoneAmount 0
                                | /
                                span#maxStone  100
                        .btn-group
                            .btn.btn-default.disabled
                                span#stoneIncrement 0
                                | / 5s
                    .btn-group.btn-group-justified
                        .btn-group
                            button#gatherFood.btn.btn-primary(type='button', onmousedown='return false') Gather Food
                        .btn-group
                            .btn.btn-default.disabled
                                span#foodAmount 0
                                | /
                                span#maxFood  100
                        .btn-group
                            .btn.btn-default.disabled
                                span#foodIncrement 0
                                | / 5s
                    .btn-group.btn-group-justified
                        .btn-group
                            button#mineOre.btn.btn-primary(type='button', onmousedown='return false') Mine Ore
                        .btn-group
                            .btn.btn-default.disabled
                                span#oreAmount 0
                                | /
                                span#maxOre  200
                        .btn-group
                            .btn.btn-default.disabled
                                span#oreIncrement 0
                                | / 5s
            .col-md-2.col-md-offset-1.hidden-xs
                h4.text-center Ore Counts
                .btn-toolbar.justify(role="toolbar")
                    .btn-group.btn-group-justified
                        .btn-group
                            .btn.iron.disabled
                                | Iron:&ensp;
                                span#ironAmount  0
                            .btn.copper.disabled
                                | Copper:&ensp;
                                span#copperAmount  0
                            .btn.silver.disabled
                                | Silver:&ensp;
                                span#silverAmount  0
                            .btn.gold.disabled
                                | Gold:&ensp;
                                span#goldAmount  0
            .col-xs-12.col-md-4.col-md-offset-1
                h4.text-center Hire Peons
                .btn-toolbar(role="toolbar")
                    .btn-group.btn-group-justified
                        .btn-group
                            button#hireLogger.btn.btn-success(type='button', onmousedown='return false') Hire Logger
                        .btn-group
                            .btn.btn-default.disabled| -
                                span#loggerCost
                                | Food
                        .btn-group
                            .btn.btn-default.disabled
                                span#loggerAmount
                                | Loggers
                    .btn-group.btn-group-justified
                        .btn-group
                            button#hireMason.btn.btn-success(type='button', onmousedown='return false') Hire Mason
                        .btn-group
                            .btn.btn-default.disabled| -
                                span#masonCost
                                | Food
                        .btn-group
                            .btn.btn-default.disabled
                                span#masonAmount
                                | Masons
                    .btn-group.btn-group-justified
                        .btn-group
                            button#hireHunter.btn.btn-success(type='button', onmousedown='return false') Hire Hunter
                        .btn-group
                            .btn.btn-default.disabled| -
                                span#hunterCost
                                | Food
                        .btn-group
                            .btn.btn-default.disabled
                                span#hunterAmount
                                | Hunters
                    .btn-group.btn-group-justified
                        .btn-group
                            button#hireMiner.btn.btn-success(type='button', onmousedown='return false') Hire Miner
                        .btn-group
                            .btn.btn-default.disabled| -
                                span#minerCost
                                | Food
                        .btn-group
                            .btn.btn-default.disabled
                                span#minerAmount
                                | Miners
        .row
            .col-xs-12.col-md-12
                .btn-group.btn-group-justified
                    .btn.disabled.btn-info
                        | Population:
                        span#workerAmount
                        | /
                        span#maxPop
                    .btn.disabled.btn-info
                        span#tentAmount
                        | Tents
                    .btn.disabled.btn-info
                        span#houseAmount
                        | Houses
                    .btn.disabled.btn-info
                        span#millAmount
                        | Mills
                    .btn.disabled.btn-info
                        span#quarryAmount
                        | Quarrys
                    .btn.disabled.btn-info
                        span#siloAmount
                        | Silos
                    .btn.disabled.btn-info
                        span#mineAmount
                        | Mines
        .row
            .col-xs-12.col-md-6
                .row
                    h4.text-center Construct Buildings
                .row
                    .btn-toolbar(role="toolbar")
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildTent.btn.btn-danger(type='button', onmousedown='return false') Pitch Tent
                            .btn-group
                                .btn.btn-default.disabled +
                                    span#tentResidents
                                    | Population
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildHouse.btn.btn-danger(type='button', onmousedown='return false') Build House
                            .btn-group
                                .btn.btn-default.disabled +
                                    span#houseResidents
                                    | Population
                        //.btn-group
                            .btn-group
                                button#researchHostel.btn.btn-danger(type='button', onmousedown='return false') Develop Hostels
                            .btn-group
                                button#buildHostel.btn.btn-danger.hidden(type='button', onmousedown='return false') Build Hostel
                            .btn-group
                                .btn.label.label-default.hidden| -
                                    span#hostelAmount
                                    |  Hostels
                                .btn.label.label-default
                                    span#hostelCostWood
                                    |  Wood | -
                                    span#hostelCostStone
                                    |  Stone
                                .btn.label.label-default
                                    span#hostelInfo -400 Wood | -150 Stone
                            .btn-group
                                button.btn.btn-default.disabled(type='button', onmousedown='return false', )| +
                                    span#hostelResidents
                                    |  Population
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildMill.btn.btn-danger.btn-block(type='button', onmousedown='return false') Build Mill
                            .btn-group
                                .btn.btn-default.disabled
                                    | +100
                                    | Max Wood
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildQuarry.btn.btn-danger(type='button', onmousedown='return false') Build Quarry
                            .btn-group
                                .btn.btn-default.disabled
                                    | +100
                                    | Max Stone
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildSilo.btn.btn-danger(type='button', onmousedown='return false') Build Silo
                            .btn-group
                                .btn.btn-default.disabled
                                    | +100
                                    | Max Food
                        .btn-group.btn-group-justified
                            .btn-group
                                button#buildMine.btn.btn-danger(type='button', onmousedown='return false') Build Mine
                            .btn-group
                                .btn.btn-default.disabled
                                    | +100
                                    | Max Ore
            .col-xs-12.col-md-6
                h4.text-center Upgrades
                .col-xs-10.col-xs-push-1.col-sm-3.col-sm-push-3.col-md-4
                    .btn-group.btn-group-vertical
                        .btn-group
                            button#upgradeSelf.upgradeTwoFingers.btn-warning.justify(type='button', data-toggle="tooltip", data-container="body", data-placement="left", title="100 Wood 100 Stone 100 Food") Personal Ability
                                br
                                .label.dimgray
                                    span#upgradeSelfTotal
                                    | resources per click.
                        //.btn-group
                            button.upgradeFiveFingers.hidden
                                #upgradeFiveFingers.btn.btn-warning Five Fingers
                                    br
                                    span.dimgray 5 resources per click.
                                    br
                                    span 450 Wood   450 Stone   120 Food
                        .btn-group
                            button#upgradeSleepingBags.btn-warning.justify(type='button', onmousedown='return false') Sleeping Bags
                                br
                                .label.dimgray Tents hold an extra person.
                        .btn-group
                            button#upgradeBunkBeds.btn-warning.justify(type='button', onmousedown='return false') Bunk Beds
                                br
                                .label.dimgray Double houses capacity.
                        .btn-group
                            button#upgradeCarpentry.btn-warning.justify(type='button', onmousedown='return false') Carpentry
                                br
                                .label.dimgray Buildings cost less wood.
                        .btn-group
                            button#upgradeMasonry.btn-warning.justify(type='button', onmousedown='return false') Masonry
                                br
                                .label.dimgray Buildings cost less stone.
                .col-xs-10.col-xs-push-1.col-sm-3.col-sm-push-3.col-md-4
                    .btn-group.btn-group-vertical
                        .btn-group
                            button#upgradeSharpenAxes.upgradeSharpenAxes.btn-warning.justify(type='button', onmousedown='return false') Sharpen Axes
                                br
                                .label.dimgray Double Loggers gathering.
                        .btn-group
                            button#upgradeSharpenPicks.upgradeSharpenPicks.btn-warning.justify(type='button', onmousedown='return false') Sharpen Picks
                                br
                                .label.dimgray Double Miners gathering.
                        .btn-group
                            button#upgradeStrengthenShovels.upgradeStrengthenShovels.btn-warning.justify(type='button', onmousedown='return false') Strengthen Shovels
                                br
                                .label.dimgray Double Masons gathering.
                        .btn-group
                            button#upgradeSharpenArrows.upgradeSharpenArrows.btn-warning.justify(type='button', onmousedown='return false') Sharpen Arrows
                                br
                                .label.dimgray Double Hunters gathering.
